<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center">

    <ListView
        android:id="@+id/listViewSdHungry"
        android:layout_width="208dp"
        android:layout_height="605dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSdHungry"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <ListView
        android:id="@+id/listViewSdEating"
        android:layout_width="204dp"
        android:layout_height="605dp"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/listViewSdHungry"
        app:layout_constraintTop_toBottomOf="@+id/textSdviewEating" />

    <TextView
        android:id="@+id/textSdviewEating"
        android:layout_width="208dp"
        android:layout_height="38dp"
        android:layout_marginBottom="19dp"
        android:hyphenationFrequency="normal"
        android:shadowColor="#000000"
        android:singleLine="true"
        android:text="@string/SdEating"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewSdHungry"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewSdHungry"
        android:layout_width="208dp"
        android:layout_height="38dp"
        android:hyphenationFrequency="normal"
        android:text="@string/SdHungry"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>